require 'methadone'
require 'objc_2_swift'

module SwiftTools
  class Tool
    include Methadone::Main
    include Methadone::CLILogging

    main do |h_file, m_file|
      if File.extname(h_file) != '.h'
      end

    end

    version SwiftTools::VERSION
    description 'Rough Objective-C to Swift Converter'
    arg :h_file, :required
    arg :m_file

    go!
  end
end
